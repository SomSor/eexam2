@using System.Security.Claims
@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebSite</title>

    <environment names="Development">
        @if (!User.Identity.IsAuthenticated)
        {
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        }
        @*<link rel="stylesheet" href="~/css/site.css" />*@
        <link href="~/css/app.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/foundation-icon-fonts/foundation-icons.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        @if (!User.Identity.IsAuthenticated)
        {
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        }
        <link href="~/css/app.css" rel="stylesheet" type="text/css" />
        <link href="~/lib/foundation-icon-fonts/foundation-icons.css" rel="stylesheet" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body>
    <div class="menu-group primary">
        @await Html.PartialAsync("_LoginPartial")
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - Exam Bank</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

        <script src="~/assets/js/foundation.min.js"></script>
        <script src="~/js/templates.js"></script>
        <script src="~/js/routes.js"></script>
        <script src="~/js/app.js"></script>

        <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>
        <script src="~/lib/angular-resource/angular-resource.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.js"></script>
        <script src="~/lib/highlightjs/highlight.pack.js"></script>
        <script src="~/lib/marked/lib/marked.js"></script>
        <script src="~/lib/angular-marked/dist/angular-marked.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

        <script src="~/assets/js/foundation.min.js"></script>
        <script src="~/js/templates.js"></script>
        <script src="~/js/routes.js"></script>
        <script src="~/js/app.js"></script>

        <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>
        <script src="~/lib/angular-resource/angular-resource.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.js"></script>
        <script src="~/lib/highlightjs/highlight.pack.js"></script>
        <script src="~/lib/marked/lib/marked.js"></script>
        <script src="~/lib/angular-marked/dist/angular-marked.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>

