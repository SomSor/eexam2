@using System.Security.Claims

<div class="menu-group-left">
    <ul class="primary condense menu-bar">
        <li style="width:150px"><a ui-sref="home"><strong>Exam Bank</strong></a></li>
        @if (User.Identity.IsAuthenticated)
        {
            <li style="width:auto;min-width:150px"><a ui-sref="activatedsubjectlist">Activated Subject</a></li>
            <li style="width:auto;min-width:150px"><a ui-sref="inactivesubjectlist">Inactivate Subject</a></li>
            <li style="width:auto;min-width:150px"><a ui-sref="uploadexamsuite">Upload Examsuite</a></li>
            <li style="width:auto;min-width:150px"><a ui-sref="createinactivesubject">Create Exam</a></li>
            <li style="width:auto;min-width:150px"><a href="~/readme.txt">วิธีใช้งาน</a></li>
        }
    </ul>
</div>

<div class="menu-group-right">
    <ul class="primary menu-bar">
        @if (User.Identity.IsAuthenticated)
        {
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                    <font color="white" asp-controller="Manage" asp-action="Index" title="Manage">@User.Identity.Name</font>&nbsp;&nbsp;&nbsp;
                    <a onclick="logoutForm.submit()"><font color="white">Log off</font></a>
                </form>
            </li>
        }
        else
        {
            @*<li><a asp-controller="Account" asp-action="Register">Register</a></li>*@
            <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
        }
    </ul>
</div>